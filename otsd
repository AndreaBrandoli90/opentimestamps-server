import sys
if sys.version_info[1] < 7:
    sys.exit("OpenTimestamps requires Python version 2.7.0 or newer. "\
             "(you have %d.%d.%d)"%sys.version_info[0:3])

from jsonrpclib.SimpleJSONRPCServer import SimpleJSONRPCServer

from opentimestamps.rpc import RpcInterface

server = SimpleJSONRPCServer(("localhost",15175))
server.register_introspection_functions()


rpc_interface = RpcInterface()
server.register_instance(rpc_interface)
server.register_function(lambda:dir(rpc_interface),'__dir__')

server.serve_forever()
